{
  "compilerOptions": {
    "target": "ESNext", // or a lower version, depending on your needs
    "module": "ESNext", // use ES modules for better interoperability
    "moduleResolution": "node", // for node resolution strategy
    "declaration": true, // generates .d.ts files
    "declarationDir": "./dist", // where the types will be output
    "outDir": "./dist", // output compiled JS
    "esModuleInterop": true, // for compatibility with CommonJS modules
    "skipLibCheck": true, // improve performance when checking types
    "strict": true, // enable strict type checking
    "resolveJsonModule": true // if you use JSON files in your code
  },
  "include": ["src/**/*"], // include all files in src
  "exclude": ["node_modules", "dist"] // exclude node_modules and dist
}
